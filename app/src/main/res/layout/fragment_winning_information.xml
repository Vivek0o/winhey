<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/baseColor80"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:padding="12dp"
        app:strokeColor="@android:color/transparent"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Left: Profile Image -->
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_profile_holder"
                android:scaleType="centerCrop"
                android:contentDescription="Profile Image"/>

            <!-- Center: Name and Image -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/name_text"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Ramadhir Singh"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginEnd="8dp"/>
            </LinearLayout>

            <!-- Right: Two-line Texts -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="8dp"
                >

                <TextView
                    android:id="@+id/line1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recieved Rs. 100"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/line2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Winning Amount"
                    android:textSize="12sp"
                    android:textColor="@color/Black"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>
